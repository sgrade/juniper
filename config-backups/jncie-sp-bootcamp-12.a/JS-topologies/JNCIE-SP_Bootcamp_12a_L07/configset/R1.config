chassis {
    dump-on-panic;
    aggregated-devices {
        ethernet {
            device-count 1;
        }
    }
}
interfaces {
    ge-0/0/1 {
        description "Connection to P";
        unit 0 {
            family inet {
                address 172.27.0.29/30;
            }
        }
    }
    ge-0/0/2 {
        description "Connection to T1";
        unit 0 {
            family inet {
                address 172.27.0.33/30;
            }
            family inet6 {
                address ::172.27.0.33/126;
            }
        }
    }
    ge-0/0/3 {
        description "Connection to R2";
        unit 0 {
            family inet {
                address 172.27.0.1/30;
            }
            family inet6;
            family mpls;
        }
    }
    ge-0/0/4 {
        description "Connection to R4 AE";
        gigether-options {
            802.3ad ae0;
        }
    }
    ge-0/0/5 {
        description "Connection to R4 AE";
        gigether-options {
            802.3ad ae0;
        }
    }
    ge-0/0/6 {
        description "Connection to R3";
        unit 0 {
            family inet {
                address 172.27.0.14/30;
            }
            family inet6;
            family mpls;
        }
    }
    ae0 {
        description "Connection to R4";
        aggregated-ether-options {
            lacp {
                active;
            }
        }
        unit 0 {
            family inet {
                address 172.27.0.10/30;
            }
            family inet6;
            family mpls;
        }
    }
    lo0 {
        unit 0 {
            family inet {
                address 172.27.255.1/32;
            }
            family iso {
                address 49.2008.1720.2725.5001.00;
            }
        }
    }
}
routing-options {
    rib inet6.0 {
        aggregate {
            route 2008:4498::/32;
        }
    }
    aggregate {
        route 172.27.0.0/16;
    }
    router-id 172.27.255.1;
    autonomous-system 3895077211;
}
protocols {
    mpls {
        ipv6-tunneling;
        interface ge-0/0/3.0;
        interface ge-0/0/6.0;
        interface ae0.0;
    }
    bgp {
        log-updown;
        group IBGP {
            type internal;
            local-address 172.27.255.1;
            family inet {
                unicast;
            }
            family inet6 {
                labeled-unicast {
                    explicit-null;
                }
            }
            authentication-key "$9$5znCO1hKMXtuMX7-2gTz36tu"; ## SECRET-DATA
            neighbor 172.27.255.3;
            neighbor 172.27.255.4;
        }
        group T1 {
            type external;
			accept-remote-nexthop;
            import [ accept-T1-ipv6 from-T1 ];
            family inet {
                unicast;
            }
            family inet6 {
                unicast;
            }
            export to-T1;
            peer-as 1342930876;
            neighbor 172.27.0.34;
        }
        group P {
            type external;
            import from-P;
            export to-P;
            peer-as 2087403078;
            neighbor 172.27.0.30;
        }
    }
    ospf {
        area 0.0.0.0 {
            interface ge-0/0/3.0;
            interface ge-0/0/6.0;
            interface ae0.0;
            interface lo0.0;
        }
    }
    ldp {
        preference 20;
        track-igp-metric;
        interface ge-0/0/3.0;
        interface ge-0/0/6.0;
        interface ae0.0;
    }
}
policy-options {
	policy-statement accept-T1-ipv6 {
		term 1 {
			from {
				family inet6;
				protocol bgp;
			}
			then {
				next-hop ::172.27.0.34;
				accept;
			}
		}
	}
    policy-statement from-P {
        term 1 {
            from {
                route-filter 0.0.0.0/0 prefix-length-range /8-/24;
            }
            then accept;
        }
        term 2 {
            then reject;
        }
    }
    policy-statement from-T1 {
        term 1 {
            from {
                route-filter 0.0.0.0/0 prefix-length-range /8-/24;
            }
            to rib inet.0;
            then accept;
        }
        term 2 {
            to rib inet6.0;
            then accept;
        }
        term 3 {
            then reject;
        }
    }
    policy-statement to-P {
        term 1 {
            from {
                protocol aggregate;
                route-filter 172.27.0.0/16 exact;
            }
            then accept;
        }
        term 2 {
            from protocol bgp;
            then reject;
        }
    }
    policy-statement to-T1 {
        term 1 {
            from {
                protocol aggregate;
                route-filter 172.27.0.0/16 exact;
            }
            then accept;
        }
        term 2 {
            from {
                protocol aggregate;
                rib inet6.0;
                route-filter 2008:4498::/32 exact;
            }
            then accept;
        }
    }
}
security {
    forwarding-options {
        family {
            inet6 {
                mode packet-based;
            }
            mpls {
                mode packet-based;
            }
            iso {
                mode packet-based;
            }
        }
    }
}
