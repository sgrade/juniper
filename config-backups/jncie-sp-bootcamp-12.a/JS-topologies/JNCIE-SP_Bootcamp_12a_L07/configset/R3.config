    host-name R3;
    time-zone America/Los_Angeles;
    debugger-on-panic;
    debugger-on-break;
    dump-on-panic;
    root-authentication {
        encrypted-password "$1$f7uo9x0W$j7r0p8AVKLao.XOdGGn0B."; ## SECRET-DATA
    }
    name-server {
        8.8.8.8;
    }
    login {
        user lab {
            uid 2002;
            class super-user;
            authentication {
                encrypted-password "$1$6oFJiO42$R9CAcGzU9BKWvrPJoxI8T0"; ## SECRET-DATA
            }
        }
        user ops {
            uid 2003;
            class operator;
            authentication {
                encrypted-password "$1$d2bZK78F$43wagjkCwWHUGWdznrUaB0"; ## SECRET-DATA
            }
        }
