---
## Restore configuration from ../configs/ directory
## !!!  is different from config in backup directory !!!

- name: Push configuration
  hosts: all
  connection: local
  gather_facts: no

  tasks:

  - name: pushing config from ../configs/
    junos_config:
      provider: "{{ credentials }}"
      src: ../configs/{{ inventory_hostname }}.save_text.conf
      src_format: text
      #update: replace works since Ansible 2.3, but I have 2.2
      update: replace

